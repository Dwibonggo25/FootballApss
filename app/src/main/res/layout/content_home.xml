<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">


        <ImageButton
                android:id="@+id/btnFootball"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/ic_premier_league"
                app:layout_constraintEnd_toStartOf="@+id/btnBasket"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="Football"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/btnFootball"
                app:layout_constraintStart_toStartOf="@+id/btnFootball"
                app:layout_constraintTop_toBottomOf="@+id/btnFootball" />

        <ImageButton
                android:id="@+id/btnVolley"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/ic_premier_league"
                app:layout_constraintEnd_toStartOf="@+id/btnSnooker"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btnBasket"
                app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
                android:id="@+id/btnBasket"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/ic_premier_league"
                app:layout_constraintEnd_toStartOf="@+id/btnVolley"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btnFootball"
                app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
                android:id="@+id/btnSnooker"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/ic_premier_league"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btnVolley"
                app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="20dp" />

        <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Basket"
                app:layout_constraintEnd_toEndOf="@+id/btnBasket"
                app:layout_constraintStart_toStartOf="@+id/btnBasket"
                app:layout_constraintTop_toBottomOf="@+id/btnBasket" />

        <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Volley"
                app:layout_constraintEnd_toEndOf="@+id/btnVolley"
                app:layout_constraintStart_toStartOf="@+id/btnVolley"
                app:layout_constraintTop_toBottomOf="@+id/btnVolley" />

        <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Snooker"
                app:layout_constraintEnd_toEndOf="@+id/btnSnooker"
                app:layout_constraintStart_toStartOf="@+id/btnSnooker"
                app:layout_constraintTop_toBottomOf="@+id/btnSnooker" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>